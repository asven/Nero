@model Nero.Models.EmailUser

<div id="footer">
    <div class="container 75%">

        <header class="major last">
            <h2>Questions or comments?</h2>
        </header>

        <p>
            To find out more about what Nero Engineering can do for you, send us a message and we will get back to you as soon as possible.
        </p>

        @using(Html.BeginForm("SendEmail", "Email"))
        {
            <div class="row">
                <div class="6u 12u(mobilep)">
                    @Html.TextBoxFor(x => x.Name, new { placeholder = "Name" })
                </div>
                <div class="6u 12u(mobilep)">
                    @Html.TextBoxFor(x => x.EmailAddress, new { placeholder = "Email" })
                </div>
            </div>
            <div class="row">
                <div class="12u">
                    @Html.TextAreaFor(x => x.Message, new { rows = "6", placeholder = "Message" })
                </div>
            </div>
            <div class="row">
                <div class="12u">
                    <ul class="actions">
                        <li><input type="submit" value="Send Message" /></li>
                    </ul>
                </div>
            </div>
        }

        <ul class="icons">
            
        </ul>

        <ul class="copyright">
            <li>&copy; Nero Engineering, 7135 Madison Ave W, Minneapolis, MN 55427</li>
            <li>Design: <a href="http://html5up.net">HTML5 UP</a></li>
        </ul>

    </div>
</div>